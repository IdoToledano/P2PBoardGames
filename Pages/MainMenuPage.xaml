<Page x:Class="P2PBoardGames.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2PBoardGames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">
    <Page.Background>
        <ImageBrush ImageSource="pack://application:,,,/P2PBoardGames;component/img/background.png"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource buttonStyle}" Grid.Row="1" Grid.Column="1" Click="Button_Click">Choose a Game</Button>
        <Button Style="{StaticResource buttonStyle}" Grid.Row="2" Grid.Column="1">View Scoreboard</Button>
        <Button Style="{StaticResource buttonStyle}" Grid.Row="3" Grid.Column="1">View Profile</Button>
    </Grid>
</Page>
